# Content Processor Application Configuration

# ==============================================================================
# PROCESSING MODE CONFIGURATION
# ==============================================================================

# Set to 'true' to enable Kafka-based processing
# Set to 'false' or leave empty to use FastAPI background task processing
USE_KAFKA=false

# ==============================================================================
# KAFKA CONFIGURATION (only used if USE_KAFKA=true)
# ==============================================================================

# Comma-separated list of Kafka bootstrap servers
# Example: "localhost:9092" for local development
#          "kafka1:9092,kafka2:9092,kafka3:9092" for cluster
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Kafka topic for submissions
KAFKA_TOPIC=submissions

# Kafka consumer group ID
KAFKA_GROUP_ID=submission-processor

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# SQLAlchemy database URL
# Default: SQLite for development
# Production: Use PostgreSQL or MySQL
# Examples:
#   SQLite:    sqlite:///./submissions.db
#   PostgreSQL: postgresql://user:password@localhost/submissions
#   MySQL:     mysql+pymysql://user:password@localhost/submissions
DATABASE_URL=sqlite:///./submissions.db

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================================================
# FASTAPI CONFIGURATION (used if USE_KAFKA=false)
# ==============================================================================

# FastAPI server host
FASTAPI_HOST=0.0.0.0

# FastAPI server port
FASTAPI_PORT=8000
